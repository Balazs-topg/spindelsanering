---
const { title } = Astro.props;
import NavBarItem from "../components/NavBarItem.astro";
import { EnvelopeIcon, PhoneIcon } from "@heroicons/react/24/solid";

import { Image } from "astro:assets";
import logo from "../../public/logo.png";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-neutral-50 text-balance">
    <nav
      class="bg-white rounded-b-2xl p-4 uppercase font-medium sm:flex sticky top-0 shadow-md hidden z-50"
    >
      <div class="flex w-full mx-auto max-w-7xl">
        <div class="flex-1 flex items-center">
          <!-- spindersanering göteborg -->
          <div class="overflow-hidden h-10 flex items-center justify-center">
            <Image src={logo} alt="A bird." width="250" height="250" />
          </div>
        </div>
        <div class="flex-1 justify-center flex gap-4 items-center">
          <NavBarItem>Process</NavBarItem>
          <NavBarItem>Om Oss</NavBarItem>
          <NavBarItem>Vanliga Frågor</NavBarItem>
        </div>
        <div class="flex-1 flex justify-end items-center">
          <button class="bg-black text-white px-5 py-2 rounded-full shadow-md"
            >Kontakta oss</button
          >
        </div>
      </div>
    </nav>
    <slot />
    <footer class="bg-neutral-100 py-32 rounded-t-2xl px-4">
      <div class="max-w-7xl mx-auto">
        <div class="flex items-center">
          <EnvelopeIcon className="size-5 mr-2" /> info@spindelsanering-goteborg.se
        </div>
        <div class="flex items-center">
          <PhoneIcon className="size-5 mr-2" /> 073-6551713
        </div>
      </div>
    </footer>
  </body>
</html>
